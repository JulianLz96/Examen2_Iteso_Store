<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityItem"
    android:orientation="vertical">

    <Spinner
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/item_photo_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Spinner>
    <EditText
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/item_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/item_title"
        android:inputType="text"/>
    <Spinner
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/item_category_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Spinner>
    <Spinner
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/item_store_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Spinner>
    <Button
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/item_save_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_button"/>
</LinearLayout>